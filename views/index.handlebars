<div class="row">
  <div class="col-md-12">
    <h1 id="main-header">Burger Time!</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="div">
      <h2>Yet To Be Eaten</h2>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
    </div>
  </div>

  <div class="col-md-4">
    <div class="div">
      <h2>Eaten</h2>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block2 devoured=false}}
          {{/if}}
        {{/each}}
    </div>
  </div>

  <div class="col-md-4">
    <div class="div">
      <h2>Add A Burger</h2>
      <form class="create-form">

        <div class="add-burger">
          <div class="form-group">
            <label for="burger">Burger Name: </label>
            <input type="text" id="burger" name="name" placeholder="Favorite Burger">
          </div>

        <div class="form-group">
          <label for="devoured">Have you eaten this burger?</label><br>
          <input type="radio" name="devoured" value="1"> Yes!<br>
          <input type="radio" name="devoured" value="0" :checked> No!
        </div>

          <button class="btn" type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
</div>
